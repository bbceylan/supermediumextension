{
  "manifest_version": 3,
  "name": "Super Medium Stats",
  "version": "2.0",
  "description": "A custom extension to display personal Medium stats and analyze trends.",
  "permissions": [
    "storage",
    "cookies"
  ],
  "host_permissions": [
    "https://medium.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}